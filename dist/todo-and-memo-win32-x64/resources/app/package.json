{
  "name": "todo-and-memo",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.86",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "better-sqlite3": "^11.10.0",
    "date-fns": "^4.1.0",
    "file-uri-to-path": "^1.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-big-calendar": "^1.18.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.3",
    "sass": "^1.71.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "clean": "if exist dist rmdir /s /q dist && if exist build rmdir /s /q build",
    "prebuild": "npm run clean",
    "postbuild": "xcopy /E /I /Y build dist\\todo-and-memo-win32-x64\\resources\\app\\build",
    "copy-sqlite": "xcopy /E /I /Y node_modules\\better-sqlite3 dist\\todo-and-memo-win32-x64\\resources\\app\\node_modules\\better-sqlite3",
    "electron-pack": "npm run clean && npm run build && npm run rebuild && npx electron-packager . todo-and-memo --platform=win32 --arch=x64 --out=dist --icon=public/favicon.ico --ignore=\"node_modules/(?!better-sqlite3|bindings|file-uri-to-path)\" --overwrite --no-asar --prune=false --electron-version=29.4.6 && npm run postbuild && npm run copy-sqlite && xcopy /E /I /Y node_modules\\bindings dist\\todo-and-memo-win32-x64\\resources\\app\\node_modules\\bindings && xcopy /E /I /Y node_modules\\file-uri-to-path dist\\todo-and-memo-win32-x64\\resources\\app\\node_modules\\file-uri-to-path && xcopy /E /I /Y node_modules\\node-gyp dist\\todo-and-memo-win32-x64\\resources\\app\\node_modules\\node-gyp"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-big-calendar": "^1.16.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^6.0.1",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.todo-and-memo",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
